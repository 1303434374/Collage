.page-foot {
    border-top: 1px solid #e0e0e0;
    background-color: #fff;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 1000;
}

.list {
    padding: 5px 0;
    overflow: hidden;
    float: left;
    width: 20%;
    text-align: center;
    font-size: 12px;
    color: #555;
    position: relative;
}

.list image {
    width: 24px;
    height: 24px;
}

.bgimg {
    background: #efefef url(https://comm-img.b0.upaiyun.com/img10/201704DD/155602658.jpg) no-repeat center;
}

.top_bar {
    display: block;
    width: 40px;
    height: 40px;
    position: fixed;
    bottom: 0px;
    right: 8px;
    background-color: rgb(243,241,241);
    border: 1px solid #ccc;
    border-radius: 50%;
    z-index: 999;
}

.weui-mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.6);
}

.weui-dialog {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 300px;
    top: 30%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
    padding-top: 1em;
}

.weui-dialog__bd {
    padding: 0 1.6em 0.8em;
    min-height: 40px;
    font-size: 15px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
    overflow: hidden;
}

.weui-dialog__ft {
    position: relative;
    line-height: 48px;
    font-size: 18px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.weui-dialog__ft:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D5D5D6;
    color: #D5D5D6;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.btn_cannel {
    background: #fff;
    color: #353535;
    display: block;
    -webkit-box-flex: 1;
    flex: 1;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    position: relative;
    line-height: 48px;
    font-size: 18px;
    text-align: center;
    border-radius: none;
}

.btn_primary {
    color: #0BB20C;
    background: #fff;
    display: block;
    -webkit-box-flex: 1;
    flex: 1;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    position: relative;
}

.weui-password {
    width: 100%;
    border-radius: 6px;
    background-color: #f5f5f5;
    height: 40px;
    line-height: 40px;
}

.forget_password {
    float: right;
    margin-top: 0.3em;
    padding: 0.5em 0 0;
    color: #5b9eee;
}

.tab_num {
    position: absolute;
    top: 6rpx;
    right: 20rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 32rpx;
    font-size: 18rpx;
    font-weight: 700;
    color: #fff;
    background: #f01414;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.4);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

button.color_btn[type=warn] {
    background-color: #FC3D39;
}