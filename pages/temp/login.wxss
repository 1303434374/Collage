.drag_box {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.6);
    z-index: 1000000;
}

.login_box {
    position: fixed;
    width: 80%;
    left: 10%;
    top: 10%;
    background: #fff;
    z-index: 1000001;
}

.close {
    width: 100%;
    text-align: right;
    height: 34px;
}

.close icon {
    margin: 5px 10px;
}

.login_title {
    width: 100%;
    overflow: hidden;
}

.title_btn {
    width: 50%;
    float: left;
    text-align: center;
    font-size: 20px;
    color: #555;
    border-bottom: 2px solid #c5c5c5;
    line-height: 32px;
}

.title_btn_select {
    color: #c60a1e;
    border-bottom: 2px solid #c60a1e;
}

.login_key {
    width: 88%;
    padding: 5px 2%;
    margin: 0 4%;
    border-bottom: 1px solid #c5c5c5;
    font-size: 14px;
    color: #555;
    overflow: hidden;
}

.code {
    float: left;
    overflow: hidden;
    width: 70%;
    height: 32px;
    line-height: 32px;
}

.btn_code[type="default"] {
    float: right;
    font-size: 12px;
    width: 30%;
    padding-left: 0;
    padding-right: 0;
    height: 32px;
    line-height: 32px;
    background: #c60a1e;
    color: #fff;
}

button.btn_code[disabled] {
    color: #fff;
    background: #c60a1e;
}

.password {
    float: left;
    overflow: hidden;
    height: 32px;
    line-height: 32px;
}

.eye {
    float: right;
    width: 32px;
    height: 32px;
}

.login_btn[type="default"] {
    width: 80%;
    margin: 20px 10%;
    background: #c60a1e;
    color: #fff;
}

.phone {
    width: 100%;
    height: 32px;
    line-height: 32px;
    float: left;
}

.codemsg {
    width: 100%;
}

.code_text {
    width: 100%;
    text-align: center;
    font-size: 22rpx;
    color: #999;
    padding-top: 20rpx;
}

.fastlogin[type="default"] {
    margin-top: 10px;
    margin-bottom: 10px;
}

.login_text {
    text-align: right;
    padding-bottom: 10px;
    color: #c60a1e;
}