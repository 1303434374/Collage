.add_box {
    color: #555;
    width: 92%;
    padding: 10px 4%;
    overflow: hidden;
}

.add_title {
    width: 25%;
    float: left;
    font-size: 16px;
    height: 32px;
    line-height: 32px;
}

.add_content {
    float: left;
    width: 65%;
    height: 30px;
    line-height: 30px;
    border: 1px solid #3fa1f5;
}

.add_content input {
    margin-left: 10px;
    height: 30px;
    line-height: 30px;
}

.address {
    overflow: hidden;
    font-size: 12px;
    height: 30px;
    line-height: 30px;
    padding-left: 10px;
}

.btn_sub {
    width: 80%;
    margin-top: 30px;
}

.citybody {
    position: fixed;
    bottom: 0px;
}

.cityheader {
    background: #fff;
    position: absolute;
    top: 0px;
    width: 100%;
    z-index: 4;
}

.city-cancel {
    float: left;
    padding: 20rpx;
    color: #818181;
}

.city-true {
    float: right;
    padding: 20rpx;
    color: #2fb42e;
}

.section .picker {
    background-color: #fff;
    border-bottom: 1px #d9d9d9 solid;
    border-top: 1px #d9d9d9 solid;
    padding: 20rpx;
}

picker-view-colum {
    background: #fff;
}