.list_address_box {
    width: 100%;
    padding-bottom: 50px;
    overflow: hidden;
}

.address_box {
    width: 92%;
    padding: 10px 0;
    padding-right: 4%;
    overflow: hidden;
    margin-left: 4%;
    margin-bottom: 10px;
    border-bottom: 1px solid #c1c1c1;
}

.address_left {
    float: left;
    width: 85%;
}

.address_title {
    width: 100%;
    padding: 5px 0;
    overflow: hidden;
    font-size: 14px;
    color: #79777a;
}

.name {
    float: left;
    color: #000;
    font-size: 16px;
    margin-right: 20px;
}

.phone {
    font-size: 16px;
    float: left;
    color: #555;
}

.normal {
    font-size: 16px;
    float: right;
    color: #FC3D39;
    margin-right: 10px;
}

.right {
    float: right;
    text-align: right;
}

.right image {
    width: 28px;
    height: 28px;
}

.add_btn[type="primary"] {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
}