}

button.btn {
    display: inline-block;
    font-size: 26rpx;
    margin-left: 30rpx;
}

button.btn[type=warn] {
    background-color: #FC3D39;
}

.fixed_box {
    background: #fff;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    z-index: 101;
}

.headsearch {
    width: 94%;
    padding: 10px 3%;
    border-bottom: 1px solid #c2c2c2;
    background: #fff;
    overflow: hidden;
}

.box {
    float: left;
    width: 70%;
    height: 24px;
    padding: 5px;
    border: 1px solid #c2c2c2;
    border-radius: 5px;
    position: relative;
}

.box icon {
    float: left;
    margin: 4px 10px;
}

.box input {
    float: left;
    font-size: 14px;
    color: #555;
    width: 400rpx;
}

.btn_submit {
    float: right;
    width: 20%;
    height: 34px;
}

.btn_submit button {
    height: 34px;
    line-height: 34px;
    font-size: 14px;
    color: #555;
}