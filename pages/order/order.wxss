.empty {
    text-align: center;
    position: fixed;
    width: 100%;
    height: 36px;
    line-height: 36px;
    color: #000;
    top: 30%;
}

.scroll-view_H {
    white-space: nowrap;
    height: 44px;
    line-height: 42px;
    color: #000;
    font-size: 14px;
    background-color: #fff;
    z-index: 10000;
    border-bottom: 1px solid #dfdfdf;
}

.scroll-view-item_H {
    position: relative;
    align-items: center;
    text-align: center;
    justify-content: center;
    font-size: 16px;
    display: inline-block;
    width: 22%;
    height: 42px;
    color: #000;
    border-bottom: 2px solid #fff;
}

.scroll-view-item_H.selected {
    border-bottom: 2px solid #FC3D39;
    color: #FC3D39;
}

