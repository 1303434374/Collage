    font-size: 28rpx;
    color: #555;
    float: left;
}

.color_size_qty {
    padding: 15rpx 20rpx;
}

.footer_box {
    width: 700rpx;
    padding: 20rpx 25rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    overflow: hidden;
}

.foot_title {
    float: left;
    width: 350rpx;
    padding: 20rpx 0;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: left;
}

.foot_money {
    float: left;
    width: 350rpx;
    padding: 20rpx 0;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: right;
    position: relative;
}

.weight {
    position: relative;
    left: 0;
    bottom: 10rpx;
    font-size: 20rpx;
    color: #555;
}

.foot_total_num {
    float: left;
    border-top: 1px solid #ddd;
    width: 700rpx;
    padding: 10rpx 0;
    text-align: right;
    font-size: 28rpx;
    color: #000;
}

.foot_total_money {
    float: left;
    padding: 10rpx 0;
    width: 700rpx;
    text-align: right;
    font-size: 30rpx;
    color: #000;
}

.foot_total_return {
    float: left;
    width: 700rpx;
    padding: 10rpx 0;
    text-align: right;
    font-size: 24rpx;
    color: #555;
}

.pakage {
    margin-bottom: 20rpx;
    width: 750rpx;
    padding: 20rpx 0;
    background-color: #fff;
    overflow: hidden;
}

.pakage_box {
    width: 680rpx;
    padding-left: 50rpx;
    padding-right: 20rpx;
    overflow: hidden;
    font-size: 26rpx;
    padding-bottom: 20rpx;
    padding-top: 10rpx;
    border-bottom: 10rpx solid #f5f5f5;
}

.pakage_box:last-child {
    border-bottom: none;
}

.pakage_time {
    height: 50rpx;
    line-height: 50rpx;
    float: right;
}

.drag {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.6);
}

.view_operation {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 300px;
    top: 30%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #fff;
    text-align: center;
    border-radius: 6px;
    overflow: hidden;
}

.btn_box_1 {
    border-top: 1px solid #d5d5d6;
    position: relative;
    line-height: 48px;
    font-size: 18px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.cannel {
    display: block;
    -webkit-box-flex: 1;
    flex: 1;
    color: #DC143C;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    position: relative;
}

.comfirm {
    display: block;
    -webkit-box-flex: 1;
    flex: 1;
    color: #000;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    position: relative;
}

.comfirm::after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #d5d5d6;
    color: #d5d5d6;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}

.order_summary {
    line-height: 50rpx;
    float: left;
    width: 400rpx;
}

.buyer {
    width: 700rpx;
    overflow: hidden;
    padding: 10rpx 0;
}

.buyerimg {
    float: left;
    width: 20px;
    height: 20px;
    border-radius: 100%;
    margin-right: 4px;
}

.buyername {
    float: left;
    color: #ababab;
    font-size: 12px;
    line-height: 20px;
}

.coinsummary {
    float: left;
    color: #ababab;
    font-size: 12px;
    padding: 5px 0;
    width: 700rpx;
    line-height: 30rpx;
}

.item_title_box {
    padding: 10rpx 0;
    height: 80rpx;
    line-height: 40rpx;
    overflow: hidden;
    font-size: 12px;
    float: left;
}

.item_money,.item_total {
    float: left;
    width: 130rpx;
    text-align: right;
    color: #333;
}

.item_total {
    color: #ababab;
}