}

.btn_box {
    background-color: #fff;
    padding-top: 30rpx;
    width: 700rpx;
    text-align: right;
    float: left;
}

button.btn {
    display: inline-block;
    font-size: 26rpx;
    margin-left: 20rpx;
}

button.btn[type=warn] {
    background-color: #FC3D39;
}

.goodtitlebox {
    background-color: #fff;
    padding: 20rpx 25rpx;
    width: 700rpx;
    overflow: hidden;
    height: 50rpx;
}

.goodicon {
    width: 40rpx;
    height: 40rpx;
    float: left;
    margin-top: 5rpx;
}

.goodaddress {
    float: left;
    font-size: 26rpx;
    margin-left: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.order_detail_num {
    height: 50rpx;
    line-height: 50rpx;
    float: left;
    width: 430rpx;
}

.detail_title {
    background-color: #fff;
    padding: 20rpx 25rpx;
    width: 700rpx;
    overflow: hidden;
    font-size: 26rpx;
    color: #000;
    border-bottom: 1px solid #5eaffc;
}

.img_box {
    width: 700rpx;
    padding: 20rpx 25rpx;
    overflow: hidden;
    background: #fff;
    margin-bottom: 20rpx;
}

.detail_img {
    width: 180rpx;
    height: 180rpx;
