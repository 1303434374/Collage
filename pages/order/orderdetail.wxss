    color: #000;
}

.total_money {
    float: left;
    width: 245rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: left;
    color: #b9b9b9;
    font-size: 26rpx;
}

.total_num {
    text-align: right;
}

.status_content {
    padding: 5rpx 15rpx;
