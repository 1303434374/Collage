.image {
    width: 480rpx;
    height: 330rpx;
    display: block;
}

.imgcontainer {
    height: 390rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 60rpx 0 20rpx;
    box-sizing: border-box;
    position: relative;
}

.imgcontainerContent {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
}

.w90p {
    width: 90%;
    align-items: center;
}

.phone-input {
    border: 1px solid #555;
    border-radius: 5px;
    padding: 5px 5%;
    font-size: 14px;
    color: #555;
}

.forget_box {
    width: 100%;
    height: 32px;
    line-height: 32px;
    margin-top: 10rpx;
}

.forget {
    text-align: right;
    font-size: 14px;
    padding-right: 6%;
    color: #aaa;
    float: right;
}

.goindex {
    float: left;
    font-size: 14px;
    padding-left: 6%;
    color: #aaa;
}

.close {
    position: absolute;
    right: 40rpx;
    top: 40rpx;
    height: 48rpx;
    width: 48rpx;
}

.code_box {
    width: 90%;
    border: 1px solid #555;
    border-radius: 5px;
    font-size: 14px;
    color: #555;
    overflow: hidden;
    padding: 5px 5%;
}

.code {
    float: left;
    width: 35%;
}

.code input {
    height: 36px;
    line-height: 36px;
}

.get_code[type="default"] {
    float: right;
    font-size: 14px;
    color: #555;
}

.text {
    font-size: 14px;
    color: #1296db;
    text-indent: 6px;
}