.forget_box {
    width: 90%;
    padding: 20px 5%;
}

.mobile_box {
    width: 100%;
    height: 40px;
    line-height: 40px;
    color: #000;
    font-size: 14px;
    overflow: hidden;
    border: 1px solid #ababab;
    border-radius: 6px;
}

.title {
    width: 30%;
    text-align: right;
    float: left;
}

.input_box {
    width: 70%;
    height: 40px;
    float: left;
}

.input_box input {
    height: 40px;
    line-height: 40px;
    color: #000;
    font-size: 14px;
}

.forget_title {
    color: #b9b9b9;
    font-size: 12px;
    height: 36px;
    line-height: 36px;
    padding-left: 2%;
}

.submit {
    font-size: 16px;
}