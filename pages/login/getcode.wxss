.code_title {
    width: 88%;
    padding: 20px 6% 10px;
    font-size: 14px;
    color: #000;
}

.mobile {
    color: #ff2f76;
}

.code_box {
    width: 92%;
    padding: 0 4%;
    overflow: hidden;
}

.code {
    float: left;
    width: 63%;
    border: 1px solid #ababab;
    border-radius: 6px;
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    overflow: hidden;
}

.code_title1 {
    float: left;
    padding-left: 4%;
}

.code_input {
    float: left;
    height: 40px;
    width: 60%;
}

.code_input input {
    width: 100%;
    height: 40px;
    line-height: 40px;
}

.btn_code {
    float: right;
    width: 33%;
    font-size: 14px;
    padding-left: 0;
    padding-right: 0;
    height: 40px;
}

.talk {
    width: 92%;
    padding: 0 4%;
    height: 40px;
    line-height: 40px;
    color: #d1d1d1;
    font-size: 14px;
}

.submit {
    width: 90%;
    height: 40px;
    font-size: 16px;
    margin-top: 10px;
}